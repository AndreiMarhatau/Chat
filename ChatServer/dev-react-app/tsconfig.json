{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2018",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src",
    "public"
  ],
  "exclude": [
    "node-modules"
  ]
}
